						"dependencyConditions": [
							"Succeeded",
							"Failed"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "last_index_date",
					"value": {
						"value": "@{activity('Get last index date').output.hits.hits[0]._source.indexed_date}",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"index": {
				"type": "string",
				"defaultValue": "idx_reports2"
			},
			"index_dictionary": {
				"type": "string",
				"defaultValue": "idx_dictionary2"
			}
		},
