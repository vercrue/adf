{
	"name": "PL_Denodo_ES_reports_delta",
	"properties": {
		"activities": [
			{
				"name": "Count reports",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Set last index date",
						"dependencyConditions": [
							"Succeeded",
							"Failed"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 2,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "OdbcSource",
						"query": {
							"value": "SELECT COUNT(*) \nFROM search.i_tableau_report\nWHERE report_creation_date > '@{variables('last_index_date')}' \nOR report_update_date > '@{variables('last_index_date')}'",
							"type": "Expression"
						},
						"queryTimeout": "00:03:00"
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "count",
									"type": "Int64"
								},
								"sink": {
									"path": "$['count']"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "DS_ODBC_Denodo",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DS_JSON_pipelines",
						"type": "DatasetReference",
						"parameters": {
							"file_name": "reports_count.json"
						}
					}
				]
			},
			{
				"name": "If count greater 0",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "Read count",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@greater(activity('Read count').output.firstRow.count, 0)",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "Copy reports to CSV",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 2,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "OdbcSource",
									"query": {
										"value": "SELECT * FROM search.i_tableau_report\nLEFT JOIN (\nSELECT \"Samaccountname\", \"Surname\", \"GivenName\", \"EmailAddress\" \nFROM \"si_transverse\".\"i_staff_with_device\") \nON report_owner_name = \"Samaccountname\" \nWHERE report_creation_date > '@{variables('last_index_date')}' \nOR report_update_date > '@{variables('last_index_date')}' ",
										"type": "Expression"
									},
									"queryTimeout": "00:20:00"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false,
								"validateDataConsistency": true,
								"logSettings": {
									"enableCopyActivityLog": true,
									"copyActivityLogSettings": {
										"logLevel": "Warning",
										"enableReliableLogging": false
									},
									"logLocationSettings": {
										"linkedServiceName": {
											"referenceName": "LS_ADLS_STRUCTURED",
											"type": "LinkedServiceReference"
										},
										"path": "pipelines/logs"
									}
								},
								"translator": {
									"type": "TabularTranslator",
									"mappings": [
										{
											"source": {
												"name": "site_name",
												"type": "String"
											},
											"sink": {
												"name": "site_name",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_id",
												"type": "String"
											},
											"sink": {
												"name": "report_id",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_title",
												"type": "String"
											},
											"sink": {
												"name": "report_title",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_description",
												"type": "String"
											},
											"sink": {
												"name": "report_description",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_url",
												"type": "String"
											},
											"sink": {
												"name": "report_url",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_creation_date",
												"type": "String"
											},
											"sink": {
												"name": "report_creation_date",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_update_date",
												"type": "String"
											},
											"sink": {
												"name": "report_update_date",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_project_tableau_server",
												"type": "String"
											},
											"sink": {
												"name": "report_project_tableau_server",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_owner_name",
												"type": "String"
											},
											"sink": {
												"name": "report_owner_name",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_tags",
												"type": "String"
											},
											"sink": {
												"name": "report_tags",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_preview_image_url",
												"type": "String"
											},
											"sink": {
												"name": "report_preview_image_url",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "report_list_views",
												"type": "String"
											},
											"sink": {
												"name": "report_list_views",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "list_years_param",
												"type": "String"
											},
											"sink": {
												"name": "list_years_param",
												"type": "String",
												"physicalType": "String"
											}
										},
										{
											"source": {
												"name": "site_name_param",
												"type": "String"
